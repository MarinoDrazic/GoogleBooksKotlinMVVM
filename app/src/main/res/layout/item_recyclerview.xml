<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:minHeight="?listPreferredItemHeightLarge" app:cardCornerRadius="20dp" app:cardElevation="4dp"
        app:cardPreventCornerOverlap="true" app:cardUseCompatPadding="false">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="fitXY" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Title"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTitle"
            android:maxWidth="100dp"
            android:textSize="10sp" android:layout_marginTop="170dp"
            android:layout_marginStart="16dp"
            android:textStyle="bold"

    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAuthor"
            android:layout_marginTop="190dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitle" android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/imageView" android:textSize="10sp"
            android:layout_marginBottom="16dp"

    />
</androidx.cardview.widget.CardView>