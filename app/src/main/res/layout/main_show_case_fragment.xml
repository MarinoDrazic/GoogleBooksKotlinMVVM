<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainShowCase.MainShowCaseFragment">
        <ProgressBar

                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarMystery"
                app:layout_constraintEnd_toEndOf="parent"
                android:progressTint="#00D0FC" app:layout_constraintStart_toStartOf="@+id/imageViewAdvanture"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/imageViewMystery"/>
        <TextView
                android:text="Loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewLoadingMystery"
                app:layout_constraintTop_toBottomOf="@+id/progressBarDrama"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>
        <TextView
                android:text="Loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewLoadingDrama"
                app:layout_constraintTop_toBottomOf="@+id/progressBarDrama" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>
        <ProgressBar

                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarDrama"
                app:layout_constraintEnd_toEndOf="parent"
                android:progressTint="#00D0FC" app:layout_constraintStart_toStartOf="@+id/imageViewAdvanture"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/imageViewDrama" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/recyclerViewDrama"/>
        <TextView
                android:text="Loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewLoadingAction"
                app:layout_constraintTop_toBottomOf="@+id/progressBarAction" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>
        <ProgressBar

                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarAction"
                app:layout_constraintEnd_toEndOf="parent"
                android:progressTint="#00D0FC" app:layout_constraintStart_toStartOf="@+id/imageViewAdvanture"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/imageViewAction" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/recyclerViewAction"/>
        <ProgressBar

                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarAdvanture"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:progressTint="#00D0FC" app:layout_constraintStart_toStartOf="@+id/imageViewAdvanture"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/recyclerViewAdvanture"/>
        <TextView
                android:text="Loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewLoadingAdventure"
                app:layout_constraintTop_toBottomOf="@+id/progressBarAdvanture" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>
        <ImageView
                android:src="@drawable/adventure"
                android:layout_width="wrap_content"
                android:layout_height="330dp" android:id="@+id/imageViewAdvanture"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@+id/recyclerViewAdvanture" android:scaleType="fitXY"
                tools:srcCompat="@drawable/adventure" android:visibility="invisible"/>
        <androidx.constraintlayout.widget.Group
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                app:constraint_referenced_ids="progressBarAdvanture,textViewLoadingAdventure" android:id="@+id/GroupLoadingAdvanture"/>
        <androidx.constraintlayout.widget.Group
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                app:constraint_referenced_ids="progressBarAction,textViewLoadingAction" android:id="@+id/GroupLoadingAction"/>
        <androidx.constraintlayout.widget.Group
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                app:constraint_referenced_ids="progressBarDrama,textViewLoadingDrama" android:id="@+id/GroupLoadingDrama"/>
        <androidx.constraintlayout.widget.Group
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                app:constraint_referenced_ids="progressBarMystery,textViewLoadingMystery" android:id="@+id/GroupLoadingMystery"/>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="230dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/recyclerViewAdvanture"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_centerVertical="true"
                tools:listitem="@layout/item_recyclerview"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewAdvanture"
                app:layout_constraintHorizontal_bias="0.0"/>
        <ImageView
                android:src="@drawable/action"
                android:layout_width="wrap_content"
                android:layout_height="330dp" android:id="@+id/imageViewAction"
                android:scaleType="fitXY" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewAdvanture"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:visibility="invisible"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="230dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_centerVertical="true"
                tools:listitem="@layout/item_recyclerview"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewAction" android:id="@+id/recyclerViewAction">
        </androidx.recyclerview.widget.RecyclerView>
        <ImageView
                android:src="@drawable/drama"
                android:layout_width="wrap_content"
                android:layout_height="330dp" android:id="@+id/imageViewDrama" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewAction" android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent" android:visibility="invisible"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_centerVertical="true"
                tools:listitem="@layout/item_recyclerview"
                android:id="@+id/recyclerViewDrama"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewDrama">
        </androidx.recyclerview.widget.RecyclerView>
        <ImageView
                android:src="@drawable/mystery"
                android:layout_width="wrap_content"
                android:layout_height="330dp" android:id="@+id/imageViewMystery"
                app:layout_constraintStart_toStartOf="parent"
                android:scaleType="fitXY" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewDrama" android:visibility="invisible"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_centerVertical="true"
                tools:listitem="@layout/item_recyclerview"
                android:id="@+id/recyclerViewMystery"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewMystery"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>